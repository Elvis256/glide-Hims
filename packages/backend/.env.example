# ===========================================
# Glide-HIMS Backend Configuration
# ===========================================

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=glide_hims
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_NAME=glide_hims

# Redis Configuration (for sessions/caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=generate_a_secure_random_string_here_64_chars_min
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=generate_another_secure_random_string_here
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Storage (MinIO/S3-compatible)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=YOUR_MINIO_SECRET
MINIO_USE_SSL=false
MINIO_BUCKET=glide-hims

# RabbitMQ Configuration (for async jobs)
RABBITMQ_URL=amqp://localhost:5672

# Security Settings
BCRYPT_ROUNDS=12
MFA_ISSUER=Glide-HIMS

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# ===========================================
# Production Overrides
# ===========================================
# In production, set:
# - NODE_ENV=production
# - Strong, unique JWT secrets
# - Secure database password
# - CORS_ORIGINS to your actual domain
# - LOG_LEVEL=warn
# - MINIO_USE_SSL=true
